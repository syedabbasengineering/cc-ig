# NPM Configuration for Vercel builds

# Use legacy peer deps to resolve conflicts
legacy-peer-deps=true

# Increase network timeout for slow connections
fetch-timeout=600000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Production optimizations
production=false
optional=true
engine-strict=false

# Disable unnecessary features during build
audit=false
fund=false
