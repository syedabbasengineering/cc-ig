# ============================================
# REQUIRED - Must have for deployment
# ============================================

# Database (PostgreSQL)
# Get from: https://supabase.com (recommended) or https://neon.tech
# Use the CONNECTION POOLING URL (includes ?pgbouncer=true)
DATABASE_URL="postgresql://postgres:[password]@db.xxx.supabase.co:6543/postgres?pgbouncer=true"

# Redis (For queues and caching)
# Get from: https://upstash.com (recommended - free tier)
# Must use rediss:// (with TLS) for production
REDIS_URL="rediss://default:[password]@xxx.upstash.io:6379"

# Authentication
# NEXTAUTH_URL: Your Vercel deployment URL (e.g., https://cc-ig.vercel.app)
# NEXTAUTH_SECRET: Generate with: openssl rand -base64 32
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# AI Models (OpenRouter - you have this)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-..."

# Instagram Scraping (you have this)
# Get from: https://apify.com/account/integrations
APIFY_TOKEN="apify_api_..."

# ============================================
# OPTIONAL - Can add later
# ============================================

# Supabase (optional - only if using Supabase features directly)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"

# Alternative AI Provider (optional - using OpenRouter instead)
OPENAI_API_KEY="sk-..."

# Vector Search (optional - for content recommendations)
PINECONE_API_KEY="your_pinecone_api_key"
PINECONE_ENVIRONMENT="us-east-1-aws"
PINECONE_INDEX="content-vectors"

# Slack Notifications (optional)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
SLACK_APP_TOKEN="xoxb-your-slack-app-token"

# Google Docs Export (optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Image CDN (optional - for image optimization)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# AWS S3/CloudFront (optional - alternative to Cloudinary)
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
CDN_URL="https://your-cdn-domain.com"

# Error Tracking (optional but recommended)
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..."
SENTRY_AUTH_TOKEN="..."

# App URL (optional - defaults to Vercel URL)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Queue Settings (optional - has defaults)
QUEUE_CONCURRENCY="5"
MAX_RETRY_ATTEMPTS="3"

# Cron Job Security (optional but recommended)
CRON_SECRET="generate-another-random-secret"